{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Yangtuo_Desktop",
  "version": "0.3.0",
  "identifier": "com.yangtuoai.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://yangtuo.localapi.ai",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "羊驼AI助手 - 本地AI调试工具 Beta-0.4",
        "width": 1100,
        "height": 800
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src *"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}

